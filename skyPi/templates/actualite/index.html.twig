{% extends 'base.html.twig' %}

{% block title %}Actualite index{% endblock %}

{% block body %}
    <h1>Actualite index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdAc</th>
                <th>TitreAc</th>
                <th>Description</th>
                <th>Image</th>
                <th>IdEv</th>
                <th>Id</th>
                <th>DateAjout</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actualite in actualites %}
            <tr>
                <td>{{ actualite.idAc }}</td>
                <td>{{ actualite.titreAc }}</td>
                <td>{{ actualite.description }}</td>
                <td>{{ actualite.image }}</td>
                <td>{{ actualite.idEv }}</td>
                <td>{{ actualite.id }}</td>
                <td>{{ actualite.dateAjout }}</td>
                <td>
                    <a href="{{ path('actualite_show', {'idAc': actualite.idAc}) }}">show</a>
                    <a href="{{ path('actualite_edit', {'idAc': actualite.idAc}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('actualite_new') }}">Create new</a>
{% endblock %}
