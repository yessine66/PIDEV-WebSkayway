{% extends 'base.html.twig' %}

{% block title %}Reponse index{% endblock %}
 {% block content %}
     {% block body %}

    <h1>Reponse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Réponse correcte</th>
                <th>Réponse incorrecte 1</th>
                <th>Réponse incorrecte 2</th>
                <th>Réponse incorrecte 3</th>
                <th>ID de la question associée</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reponse in reponses %}
            <tr>
                <td>{{ reponse.idR }}</td>
                <td>{{ reponse.textR1 }}</td>
                <td>{{ reponse.textR2 }}</td>
                <td>{{ reponse.textR3 }}</td>
                <td>{{ reponse.textR4 }}</td>
                <td>{{ reponse.idQ }}</td>
                <td>
                    <a href="{{ path('reponse_show', {'idR': reponse.idR}) }}">show</a>
                    <a href="{{ path('reponse_edit', {'idR': reponse.idR}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reponse_new') }}">Create new</a>
     {% endblock %}

 {% endblock %}
