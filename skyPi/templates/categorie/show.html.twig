{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}
{% block content %}

{% block body %}
    <h1>Categorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdCategorie</th>
                <td>{{ categorie.idCategorie }}</td>
            </tr>
            <tr>
                <th>NomCategorie</th>
                <td>{{ categorie.nomCategorie }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ categorie.image }}</td>
