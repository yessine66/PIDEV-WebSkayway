{% extends 'base.html.twig' %}

{% block title %}New Certificate{% endblock %}
 {% block content %}
{% block body %}
    <h1>Create new Certificat</h1>
    {{ form_start(form) }}
    {{form_label (form.titreCertif, "Titre de la certification:")}}
    {{form_widget(form.titreCertif,{'attr':{'placeholder' : ' titre'}} )}}
    {{form_errors (form.titreCertif) }}
