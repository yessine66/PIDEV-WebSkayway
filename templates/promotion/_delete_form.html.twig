<form method="post" action="{{ path('promotion_delete', {'idProm': promotion.idProm}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ promotion.idProm) }}">
    <button class="btn">Delete</button>

    <style>
        .btn {
            display: inline-block;
            padding: 12px 18px;
            cursor: pointer;
            border-radius: 5px;
            background-color: #dbf6e9;
            font-size: 16px;
            font-weight: bold;
            color: deepskyblue;
        }
    </style>

</form>
