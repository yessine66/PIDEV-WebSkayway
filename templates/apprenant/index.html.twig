{% extends 'base.html.twig' %}

{% block title %}Apprenant index{% endblock %}

{% block body %}
    <h1>Apprenant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdApp</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for apprenant in apprenants %}
            <tr>
                <td>{{ apprenant.idApp }}</td>
                <td>{{ apprenant.description }}</td>
                <td>
                    <a href="{{ path('apprenant_show', {'idApp': apprenant.idApp}) }}">show</a>
                    <a href="{{ path('apprenant_edit', {'idApp': apprenant.idApp}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('apprenant_new') }}">Create new</a>
{% endblock %}
