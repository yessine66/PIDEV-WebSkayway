{% extends 'base.html.twig' %}

{% block title %}Evenement index{% endblock %}
{% block content %}
{% block body %}
    <h1>Evenement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdEv</th>
                <th>NomEv</th>
                <th>DateEv</th>
                <th>Espace</th>
                <th>NombrePl</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.idEv }}</td>
                <td>{{ evenement.nomEv }}</td>
                <td>{{ evenement.dateEv ? evenement.dateEv|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ evenement.espace }}</td>
                <td>{{ evenement.nombrePl }}</td>
                <td>
                    <a href="{{ path('evenement_show', {'idEv': evenement.idEv}) }}">show</a>
                    <a href="{{ path('evenement_edit', {'idEv': evenement.idEv}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('evenement_new') }}">Create new</a>
{% endblock %}
{% endblock %}
